


@if (display)
{
    <DeleteDeveloperComponent Developer="@Developer" CloseModalCallback="CloseModal" OnSuccessfulDeletion="SuccessfulDeletion"></DeleteDeveloperComponent>
}

@code {

    private bool display;

    public DeleteDeveloperModal() { }

    public DeleteDeveloperModal(int id) => Id = id;

    [Parameter]
    public EventCallback<bool> OnSuccessfulDeletion { get; set; }

    [Parameter]
    public DeveloperModel? Developer { get; set; }

    public int? Id { get; set; }

    public void DeveloperDeleteModal(DeveloperModel developer)
    {
        Developer = developer;
        Id = developer.Id;
        display = true;
        StateHasChanged();
    }

    public void CloseModal() => display = false;

    protected async Task SuccessfulDeletion()
    {
        await Task.Run(() => {  });

        await OnSuccessfulDeletion.InvokeAsync();
    }
}
