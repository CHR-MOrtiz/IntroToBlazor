
@if (display)
{
    <DeleteDeveloperComponent Developer="@Developer" CloseModalCallback="CloseModal" OnSuccessfulDeletion="SuccessfulDeletionAsync"></DeleteDeveloperComponent>
}

@code {

    private bool display;

    [Parameter]
    public EventCallback<bool> OnSuccessfulDeletion { get; set; }

    [Parameter]
    public DeveloperModel? Developer { get; set; }

    public void DeveloperDeleteModal(DeveloperModel developer)
    {
        Developer = developer;
        display = true;
        StateHasChanged();
    }

    public void CloseModal() => display = false;

    protected async Task SuccessfulDeletionAsync() => await OnSuccessfulDeletion.InvokeAsync();
}
